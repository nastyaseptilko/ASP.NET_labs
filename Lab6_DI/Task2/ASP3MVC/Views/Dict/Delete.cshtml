
@{
    Layout = "~/Views/Dict/Main.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        #button {
            height: 50px;
            width: 300px;
            background: #b7efa0;
            border-radius: 20px;
        }

        .forms {
            border: 1px solid gray;
            width: 27%;
        }
    </style>
</head>
<body>
    <div>
        <h3>Форма удаления объекта</h3>
        <form method="post" action="./DeleteSave">
            <input type="hidden" name="Id" value="@ViewBag.Object.Id" />
            <table>
                <tr>
                    <td><p>ФИО </p></td>
                    <td><input type="text" name="FIO" value="@ViewBag.Object.FIO" disabled/> </td>
                </tr>
                <tr>
                    <td><p>Телефон :</p></td>
                    <td>
                        <input type="text" name="Telephone" value="@ViewBag.Object.Telephone"  disabled/>
                    </td>
                </tr>
                <tr><td><input id="button" type="submit" value="Подтвердить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
